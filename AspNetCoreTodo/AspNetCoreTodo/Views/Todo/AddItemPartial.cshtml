@model TodoItem


<div class="row">
<!-- <div class="form-group"> -->
    <div class="col-lg-12">
        <form asp-action="AddItem" method="POST">
    
            <label asp-for="Title">Add new Item: </label>
            <input asp-for="Title" class="col-lg-7">

            <!-- @Html.LabelFor(m => m.DueAt, new { @class = "col-md-2 control-label" }) -->
            @Html.TextBoxFor(m => m.DueAt, "{0:yyyy-MM-ddThh:mm:ss}", new { @class = "col-lg-3", type = "datetime-local" })

            <button type="submit">Add</button>     
        </form>
    </div>
<!-- </div> -->
</div>
    
